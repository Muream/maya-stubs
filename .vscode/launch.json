{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Mayapy: Generate Stubs",
            "type": "python",
            "request": "launch",
            "module": "maya_stubgen",
            "args": [
                "generate-stubs"
            ],
            "console": "internalConsole",
            "justMyCode": true,
            "python": "${workspaceFolder}/mayapy.bat",
        },
        {
            "name": "MayaPy: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "internalConsole",
            "justMyCode": true,
            "python": "${workspaceFolder}/mayapy.bat",
            "purpose": [
                "debug-test",
                "debug-in-terminal"
            ]
        },
    ]
}